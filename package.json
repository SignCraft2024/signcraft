{
	"name": "signcraft",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"format": "prettier --write \"**/*.{ts,tsx,js,md,mdx,css,yaml}\"",
		"check-format": "prettier --check \"**/*.{ts,tsx,js,md,mdx,css,yaml}\"",
		"preview": "vite preview",
		"test": "jest"
	},
	"dependencies": {
		"@chakra-ui/react": "^2.8.2",
		"@types/prop-types": "^15.7.11",
		"annotpdf": "^1.0.15",
		"bootstrap": "^5.1.3",
		"dayjs": "^1.11.10",
		"enzyme": "^3.11.0",
		"firebase": "^10.8.0",
		"formik": "^2.4.5",
		"ncp": "^2.0.0",
		"pdf-lib": "^1.17.1",
		"prop-types": "^15.8.1",
		"pspdfkit": "^2024.1.2",
		"react": "^18.2.0",
		"react-bootstrap": "^2.10.0",
		"react-dom": "^18.2.0",
		"react-draggable": "^4.4.6",
		"react-dropzone": "^14.2.3",
		"react-file-reader": "^1.1.4",
		"react-icons": "^5.0.1",
		"react-pdf": "^7.7.0",
		"react-router-dom": "^6.22.0",
		"react-signature-canvas": "^1.0.6",
		"rollup-plugin-copy": "^3.5.0",
		"web-vitals": "^3.5.1",
		"yup": "^1.3.3"
	},
	"devDependencies": {
		"@cfaester/enzyme-adapter-react-18": "^0.7.1",
		"@testing-library/react": "^14.2.1",
		"@types/dotenv": "^8.2.0",
		"@types/jest": "^29.5.12",
		"@types/react": "^18.2.43",
		"@types/react-dom": "^18.2.17",
		"@types/react-signature-canvas": "^1.0.5",
		"@typescript-eslint/eslint-plugin": "^6.19.0",
		"@typescript-eslint/parser": "^6.19.0",
		"@vitejs/plugin-react": "^4.2.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"prettier": "^3.2.4",
		"ts-jest": "^29.1.2",
		"typescript": "^5.2.2",
		"vite": "^5.0.8",
		"vite-plugin-environment": "^1.1.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "jsdom",
		"setupFiles": [
			"<rootDir>/__mocks__/importMeta.ts"
		],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|oga|json)$": "identity-obj-proxy",
			"\\.(css|less|sass|scss)$": "identity-obj-proxy"
		}
	}
}
